                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-4 col-xs-12">
                        <div class="logo-area text-center logo-xs-mrg">
                            <a href="index.html"><img src="~/pages/home/img/logo.png" alt="logo" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- header-mid-area-end -->
        <!-- main-menu-area-start -->
        <div class="main-menu-area hidden-sm hidden-xs sticky-header-1" id="header-sticky">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center" style="margin-left: 300px;">
                            <div class="menu-area">
                                <div class="safe-area">
                                    <a href="#">Trang Chủ</a>
                                </div>
                                <div class="safe-area">
                                    <a href="#">Đăng Kí</a>
                                </div>
                                <div class="safe-area">
                                    <a href="#">Đăng Nhập</a>
                                </div>
                                <div class="safe-area">
                                    <a href="#">Liên Hệ</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- main-menu-area-end -->
        <!-- mobile-menu-area-start -->
        <div class="mobile-menu-area hidden-md hidden-lg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="mobile-menu">
                            <nav id="mobile-menu-active">
                                <ul id="nav">
                                    <li class=""><a href="#">Trang Chủ</a></li>
                                    <li><a href="#">Đăng Kí </a></li>
                                    <li><a href="#">Đăng Nhập</a></li>
                                    <li><a href="#">Liên Hệ</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    @RenderBody()

    <footer>
