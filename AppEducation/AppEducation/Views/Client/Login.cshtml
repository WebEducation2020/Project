@model LoginModel
@{
    ViewData["Title"] = "User Login";
}

@section Head {
	<link rel="stylesheet" type="text/css" href="~/pages/login/dangnhap.css">
}
<div class="wrapper">
	<div class="logo">
		<img src="~/pages/login/img/logo.png" alt="GitHub">
	</div>
	<div class="title">
		<p>Sign in to Callcenter</p>
	</div>
	<div class="form">
		<div class="input_field">
			<label>Username or email address</label>
			<input type="text" class="input">
		</div>
		<div class="input_field">
			<label>Password</label>
			<input type="password" class="input">
			<a href="#" class="forgot">Forgot password?</a>
		</div>
		<div class="btn">
			<input type="submit" value="Sign in" class="sign_btn">
		</div>
	</div>
	<div class="create_act">
		<p>New to Account? <a href="#">Create an account.</a></p>
	</div>
	<div class="footer">
		<ul>
			<li><a href="#">Terms</a></li>
			<li><a href="#">Privacy</a></li>
			<li><a href="#">Security</a></li>
			<li><a href="#">Contact CallCenter</a></li>
		</ul>
	</div>
</div>