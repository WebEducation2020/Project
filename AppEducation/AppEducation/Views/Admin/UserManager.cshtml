@model IEnumerable<AppUser>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Index";
    
}
@section Head{
    <link type="text/css" rel="stylesheet" href="~/pages/admin/css/viewdetails.css"/>
}

@section Content{
<div class="right__content">
    <div class="right__title">Danh Sách Người Dùng</div>
    <div class="right__table">
        <p class="right__tableTitle">Thông tin tài khoản</p>
        <div class="right__tableWrapper">
            <table id="example1" class="table table-striped table-bordered table-sm"  cellspacing="0" >
                <thead>
                    <tr>
                        <th>Order Number</th>
                        <th>ID</th>
                        <th>User Name</th>
                        <th style="text-align: left;">Email</th>
                        <th>Modify</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td> No user registered </td>
                        </tr>
                    }
                    else
                    {
                        var i = 0;
                        foreach (AppUser user in Model)
                        {
                            <tr>
                                <td data-label="Order Number">@i</td>
                                <td data-label="ID">@user.Id</td>
                                <td data-label="UserName">@user.UserName</td>
                                <td data-label="Email" style="text-align: left;">@user.Email</td>
                                <td data-label="Modify">
                                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                        <a id="@user.Id" class="details btn btn-sm btn-primary"   onclick="document.getElementById('id02').style.display='block'">Details</a>
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Order Number</th>
                        <th>ID</th>
                        <th>User Name</th>
                        <th style="text-align: left;">Email</th>

                        <th>Modify</th>
                    </tr>
                </tfoot>
            </table>
        </div>
       

        </div>
    </div>
</div>
<div id="id02" class="modal">
    <div class="modal-content-create cont-create">
        <div class="container">
            <div class="row">
                <div class="close-set text-right ">
                <h1 class="text-center">Thông tin chi tiết</h1> <hr>
                <input class="btn btn-lg" type="button" onclick="document.getElementById('id02').style.display='none'" class="btn btn-primary" value="Thoát" />
                </div>
                <div id="details"></div>
            </div>
        </div>
    </div>
</div>
}

@section Script {
    <script src="~/jquery/jquery.js"></script>
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/pages/admin/js/viewdetail.js"></script>
 
}